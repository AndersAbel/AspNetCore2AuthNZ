@using AspNetCore2AuthNZ.Models;
@using AspNetCore2AuthNZ.Data;
@model Order
@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>Shopping Cart</h2>

<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var ol in Model.Lines)
        {
            <tr>
                <td>@Product.GetName(ol.ProductId)</td>
                <td>@ol.Quantity</td>
            </tr>

        }
    </tbody>
</table>

<form>
    <button type="submit" class="btn btn-success">Send Order!</button>
</form>

