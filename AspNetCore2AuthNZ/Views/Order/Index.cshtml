@model IEnumerable<OrderListViewModel>
@{ 
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>#</th>
            <th>Sent</th>
            <th>Quantity</th>
            <th>User</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var ol in Model)
        {
            <tr class="linked-item" data-link="@Url.Action("View", new { id = ol.OrderId })">
                <td>@ol.OrderId</td>
                <td>@ol.SentTime</td>
                <td>@ol.ItemCont</td>
                <td>@ol.UserId</td>
            </tr>
        }
    </tbody>
</table>